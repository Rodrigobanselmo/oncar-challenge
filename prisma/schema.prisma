datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id    Int     @default(autoincrement()) @id
  plate String @unique
  color String
  price Int
  year String
  kilometers Int
  fuel String
  desc String?
  updatedAt  DateTime   @updatedAt
  created_at DateTime @default(now())
  modelName String
  brandName String
  brand Brand @relation(fields: [brandName], references: [name], onDelete: Restrict, onUpdate: Cascade)
  model Model @relation(fields: [modelName,brandName], references: [name, brandName], onDelete: Restrict, onUpdate: Cascade)
}


model Brand {
  name String  @id
  created_at DateTime @default(now())
  cars Car[]
  models Model[]
}

model Model {
  name String
  num_requests Int @default(0)
  created_at DateTime @default(now())
  brandName String
  brand Brand @relation(fields: [brandName], references: [name], onDelete: Cascade, onUpdate: Cascade)
  cars Car[]
  
  @@id([name, brandName], name: "Model_model_brand_key")
}

model Simulations {
  id    Int     @default(autoincrement()) @id
  name String 
  cpf Int
  phone Int
  birthDate String
  email Int 
  income Int
  haveHelp Boolean
  dirtyName Boolean
  created_at DateTime @default(now())
  address Address?
}

model Address {
  id    Int     @default(autoincrement()) @id
  cep Int 
  address String
  number Int
  complement String
  neighbour String
  city String
  estate String
  simulationId Int
  simulation Simulations @relation(fields: [simulationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

}
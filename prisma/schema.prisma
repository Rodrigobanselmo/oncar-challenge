datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id    Int     @default(autoincrement()) @id
  plate String @unique
  color String
  price String
  year String
  kilometers Int
  fuil String
  desc String
  updatedAt  DateTime   @updatedAt
  created_at DateTime @default(now())
  modelId Int
  model Model @relation(fields: [modelId], references: [id], onDelete: Restrict, onUpdate: Cascade)
}


model Brand {
  id    Int     @default(autoincrement()) @id
  brand String  
  created_at DateTime @default(now())
  models Model[]
}

model Model {
  id    Int     @default(autoincrement()) @id
  model String
  num_requests Int
  created_at DateTime @default(now())
  brandId Int
  brand Brand @relation(fields: [brandId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  cars Car[]
}
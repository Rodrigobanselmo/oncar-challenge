datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id    Int     @default(autoincrement()) @id
  plate String @unique
  color String
  price Int
  year String
  kilometers Int
  fuel String
  desc String?
  updatedAt  DateTime   @updatedAt
  created_at DateTime @default(now())
  modelId Int
  brandId Int
  brand Brand @relation(fields: [brandId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  model Model @relation(fields: [modelId], references: [id], onDelete: Restrict, onUpdate: Cascade)
}


model Brand {
  id    Int     @default(autoincrement()) @id
  brand String  @unique
  created_at DateTime @default(now())
  cars Car[]
  models Model[]
}

model Model {
  id    Int     @default(autoincrement()) @id
  model String
  num_requests Int
  created_at DateTime @default(now())
  brandId Int
  brand Brand @relation(fields: [brandId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  cars Car[]
  
  @@unique([model, brandId], name: "Model_model_brandId_key")
}